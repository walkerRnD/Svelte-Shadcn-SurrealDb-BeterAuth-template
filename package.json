{
  "name": "svelte-shadcn-surrealdb-beterauth-template",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "====== build modes ======": "",
    "build": "vite build",
    "====== run modes ======": "",
    "dev": "vite dev",
    "dev:debug": "node --inspect-brk=9229 ./node_modules/.bin/vite dev",
    "preview": "vite preview",
    "====== utils ======": "",
    "update": "npx npm-check --update",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "====== testing ======": "",
    "test:unit": "vitest",
    "test:server": "jest --config jest.config.mjs",
    "test:e2e": "set NODE_ENV=test && npm run preview && playwright test",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@inlang/paraglide-js": "^2.0.0",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-svelte-csf": "^5.0.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/sveltekit": "^9.1.8",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22",
    "@vitest/browser": "^3.2.3",
    "mdsvex": "^0.12.3",
    "playwright": "^1.53.0",
    "storybook": "^9.1.8",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^0.1.0"
  },
  "dependencies": {
    "better-auth": "^1.3.16",
    "surrealdb": "^1.3.2"
  }
}
